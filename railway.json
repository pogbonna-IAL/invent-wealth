{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --no-audit && npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "node .next/standalone/server.js || npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

